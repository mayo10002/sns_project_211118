<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.sns.follow.dao.FollowDAO">
 <insert id="insertFollow" parameterType="map">
 INSERT INTO `follow`
 	( 
 		`userId`
		,`followingId`
		,`createdAt`
 	)
 	VALUES
 	(
 		#{userId}
		,#{followingId}
		,NOW()
 	)
 	
 </insert>
 <select id="selectFollowCountByUserIdAndFollowingId" parameterType="map" resultType="int">
 SELECT 
 	COUNT(1)
 FROM
 		`follow`
 WHERE
 		`followingId` = #{followingId}
 		<if test="userId != null">
 			AND `userId` = #{userId}
 		</if>
 </select>
 <select id="selectFollowerListByUserId" parameterType="int" resultType="map">
 SELECT 
 	`userId`
	,`followingId`
	,`createdAt`
FROM 
	`follow`
WHERE
	`userId` = #{userId}
 </select>
 <select id="selectFolloweeListByFollowingId" parameterType="int" resultType="map">
 SELECT 
 	`userId`
	,`followingId`
	,`createdAt`
FROM 
	`followingId`
WHERE
	`userId` = #{userId}
 </select>
 <delete id="deleteFollowByUserIdAndFollowingId" parameterType="map">
DELETE FROM 
 	`follow`
 WHERE
 	`userId` = #{userId} 
 	 AND
 	`followingId` = #{followingId} 
 	
 </delete>
 </mapper>