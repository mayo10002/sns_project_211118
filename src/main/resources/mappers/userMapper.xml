<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.user.dao.UserDAO">
 	<select id="existUserByLoginId" parameterType="String" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE 
 			`loginId` = #{loginId}
 	</select>
 	<insert id="insertUser" parameterType="map">
 	INSERT INTO `user`
	 	(
	 	`loginId`
		,`password`
		,`name`
		,`address`
		,`createdAt`
		,`updatedAt`
		)
 	VALUES
 		(
 		#{loginId}
		,#{password}
		,#{name}
		,#{address}
		,NOW()
		,NOW()
		)
 	</insert>
 	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.sns.user.model.User">
 	SELECT
 		`id`
 		,`loginId`
		,`password`
		,`name`
		,`address`
		,`createdAt`
		,`updatedAt`
 	FROM
 		`user`
 	WHERE
 		`loginId` = #{loginId}
 		AND `password` = #{password}
 	</select>
 	<select id="selectUserByUserId" parameterType="int" resultType="com.sns.user.model.User">
 	SELECT
 		`id`
 		,`loginId`
		,`password`
		,`name`
		,`address`
		,`createdAt`
		,`updatedAt`
 	FROM
 		`user`
 	WHERE
 		`id` = #{userId}
 	
 	</select>
 </mapper>